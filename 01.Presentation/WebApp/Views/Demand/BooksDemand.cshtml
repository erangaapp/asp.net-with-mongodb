
@{
    ViewBag.Title = "Search Books";
}

<div class="row">
    <hgroup>
        <h2>@ViewBag.Title</h2>
    </hgroup>
</div>
<div class="row">
    <div class="span12">
        <p>Use this area to search books and demand</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">

        @using (Ajax.BeginForm("SearchBooks", "Demand", new AjaxOptions { UpdateTargetId = "result" }, new { @id = "serachForm" }))
        {

            <div class="form-group row">
                @Html.TextBox("query", "", new { @class = "form-control col-lg-4 col-md-4 col-sm-4 col-xs-4", @placeholder = "Search query" })
                &nbsp;<button type="submit" id="search" value="Search" class="btn btn-primary btn-iconed"><i class="glyphicon glyphicon-search"></i> Search</button>
            </div>

        }

    </div>

    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">

        @using (Ajax.BeginForm("BooksDemand", "Demand", new AjaxOptions { UpdateTargetId = "result", HttpMethod = "POST" }, new { @class = "" }))
            {

            <div>
                <div id="selectedBooks" style="display:none;">
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <h5 class="text-info text-capitalize "><span class="glyphicon glyphicon-book warning">&nbsp;</span><span id="bookCount"></span></h5>
                            <input type="hidden" name="bookIds" id="bookIds" />
                        </div>
                        <div class="col-md-6">
                            <button type="submit" name="Send" value="Search" class="btn btn-info btn-iconed">Demand Selected Books&nbsp;<span class="glyphicon glyphicon-circle-arrow-right"></span></button>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>

</div>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12" id="result"></div>
</div>




